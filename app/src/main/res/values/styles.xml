<resources>
    <style name="app_theme_base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="app_theme" parent="app_theme_base">
        <!--<item name="android:windowLightStatusBar">false</item>-->
    </style>

    <style name="app_theme_bootstrap_activity" parent="app_theme_base">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:windowBackground">@color/primary</item>
    </style>

    <style name="app_theme_toolbar" parent="app_theme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/black</item>
    </style>

    <style name="app_theme_settings" parent="app_theme_base">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="primary_text_view" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="secondary_text_view" parent="android:Widget.TextView">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="contained_button">
        <item name="android:textColor">@color/contained_button_text</item>
        <item name="android:radius">@dimen/contained_button_corners</item>
        <item name="android:elevation">@dimen/contained_button_elevation</item>
        <item name="colorButtonNormal">@color/primary</item>
    </style>

    <!-- Alert Dialog style-->
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">#FFFFFF</item>
    </style>

</resources>

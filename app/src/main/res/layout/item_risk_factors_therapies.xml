<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_risk_factors_text_view_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            style="@style/secondary_text_view" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/item_risk_factors_button_remove"
            app:theme="@style/contained_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_add_edit_patient_item_risk_factors_button_remove"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
